<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/structure_detail_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/cardview4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v4.view.ViewPager
                        android:layout_marginTop="20dp"
                        android:layout_height="200dp"
                        android:layout_width="350dp"
                        android:layout_gravity="center"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/detaySlider"></android.support.v4.view.ViewPager>

                    <me.relex.circleindicator.CircleIndicator
                        android:layout_marginTop="-25dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/sliderNokta"
                        app:ci_drawable = "@color/colorAccent"
                        app:ci_drawable_unselected = "@color/colorPrimary">

                    </me.relex.circleindicator.CircleIndicator>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/cardview1"
                android:visibility="gone">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_height="200dp"
                    android:layout_width="350dp"
                    android:layout_gravity="center"
                    android:id="@+id/image"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp">
                </ImageView>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="50dp"
                android:id="@+id/cardview2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:layout_gravity="center"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:text=""/>

                    <TextView
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/city_county"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text=""/>

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/InformationSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="3"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/Information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/InformationSummaryTR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="3"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/InformationTR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/InformationChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="60dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="left"
                            android:text="CHANGE"
                            android:textColor="#0000ee"
                            android:visibility="visible" />


                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/non_favorite"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/non_favorite"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"/>

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/favorite"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/favorite"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:visibility="visible"
                            android:id="@+id/InformationContinue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONTÄ°NUE"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="60dp"
                            android:textColor="#0000ee"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="50dp"
                android:id="@+id/cardview3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="15dp"
                        tools:context=".Map.StructureDetail" />

                    <TextView
                        android:id="@+id/FullMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Click For Large Map" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>